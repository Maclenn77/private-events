<h2> Users </h2>

<h4> <%="Events created by #{@user.name}:" %> </h4>

<% @events.each do |event| %>
  <p> <%= "#{event.description} in #{event.location} at #{event.date}" %> </p>
<% end %>

<h4> <%="Events attended by #{@user.name}:" %> </h4>

<% @attending.each do |inv| %>
  <p> <%= "* #{@user.name} was invited to an event in #{Event.find_by(id: inv.event_id).location} at #{Event.find_by(id: inv.event_id).date.to_formatted_s(:rfc822)}" %> </p>
<% end %>
