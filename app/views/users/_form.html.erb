<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :username, label: 'Add an username', input_html: { class: 'string'}, wrapper: false, label_html: { class: "label"}, placeholder: "Create a new user" %>
  </div>
</div>
<%= f.button :submit %>
<% end %>
