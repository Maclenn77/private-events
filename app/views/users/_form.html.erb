<div class="form-group justify-content-center">
<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>
<div class="form-row justify-content-center">
  <div class="control">
    <%= f.input :name, label: 'Add an username', input_html: { class: 'form-control'}, wrapper: false, label_html: { class: "form-check-label"}, placeholder: "Create a new user" %>
  </div>
</div>
<div class="form-row justify-content-center">
<%= f.button :submit, class: 'btn btn-primary mt-3' %>
</div>
<% end %>
</div>
