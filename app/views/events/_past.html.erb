<div class="m-5">
<% if Event.previous.nil? %>
  <%= "There's not previous events" %>
<% else %>
<% Event.previous.each do |inv| %>
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= "Event in #{inv.location } " %> </h5>
      <p class="card-text"> <%= "at #{inv.date.to_formatted_s(:rfc822)}." %></p>
      <%= link_to 'View event', event_show_path(inv)  %>
  </div>
</div>
<% end %>
<% end %>
</div>
