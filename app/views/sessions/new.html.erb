<h2> Log ing </h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-inputs">
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email"} %>
      <%= f.input :id,
                  required: false %>
</div>

<div class="form-actions">
  <%= f.button :submit, "Log in" %>
</div>
<% end %>

<%= render "devise/shared/links" %>

